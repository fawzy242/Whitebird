{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Whitebird",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Whitebird",
      "program": "${workspaceFolder}/src/Whitebird/bin/Debug/net8.0/Whitebird.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Whitebird",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
